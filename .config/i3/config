# Constants
set $mod Mod1

set $l_key h
set $d_key j
set $u_key k
set $r_key l

set $workspace1 "1"
set $workspace2 "2"
set $workspace3 "3"
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"
set $workspace10 "10 "


# gruvbox colors, according to https://github.com/morhetz/gruvbox-contrib/blob/master/color.table
set $dark0_hard       #1d2021
