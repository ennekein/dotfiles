startup_message off

altscreen on

# Enable 256 color term
term xterm-256color

# Cache 30000 lines for scroll back
defscrollback 30000

#default colors
sorendition + WK

# Window list at the bottom.
hardstatus alwayslastline

# form https://gist.github.com/joaopizani/2718397
hardstatus string '%{= Kd} %{= Kd}%-w%{= Kr}[%{= KW}%n %t%{= Kr}]%{= Kd}%+w %-= %{KG} %H%{KW}|%{KY}%l%{KW}|%D %M %d %Y%{= Kc} %c:%s %{-}'

#name of the window 
caption splitonly '%?%F%{= KW}%:%{= Kd}%?   %n %t'

